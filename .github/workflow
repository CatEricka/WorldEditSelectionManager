name: Java CI

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # 1.16.5
      - uses: actions/checkout@v3
        with:
          ref: 'master'
      - name: Set up JDK 16
        uses: actions/setup-java@v3
        with:
          java-version: '16'
          distribution: 'adopt'
      - name: Build with Maven for 1.16.5
        run: mvn --batch-mode --update-snapshots package

      # 1.17.1+
      - uses: actions/checkout@v3
        with:
          ref: 'paperspigot1.17.1_fawe2.0'
      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          java-version: '17'
          distribution: 'adopt'
      - name: Build with Maven for 1.17.1+
        run: mvn --batch-mode --update-snapshots package

      # store artifacts
      - name: Store artifacts
        uses: actions/upload-artifact@v3
        with:
          name: artifacts
          path: 'target/*.jar'